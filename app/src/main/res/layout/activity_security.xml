<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SecurityActivity">

    <TextView
        android:id="@+id/security_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sent link to your email. You may need to check your Junk or Spam folder if you don't see the link"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/Security_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/security_link"
        android:background="@drawable/btn_round"/>

</RelativeLayout>